# AWS Production Environment Configuration for Mission Sync AI
NODE_ENV=production
APP_NAME=MissionSyncAI

# Database Configuration (Amazon RDS PostgreSQL)
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_USER=missionsync_admin
DB_PASSWORD=your_secure_rds_password_here
DB_NAME=missionsync_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=require

# Redis Configuration (Amazon ElastiCache)
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 Configuration for Document Storage
S3_BUCKET_NAME=missionsync-documents-prod
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
S3_USE_SSL=true

# CloudFront CDN Configuration
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
CDN_URL=https://${CLOUDFRONT_DOMAIN}

# Application URLs (Update with your domain)
CORS_ORIGIN=https://missionsyncai.com
NEXT_PUBLIC_API_URL=https://api.missionsyncai.com
NEXT_PUBLIC_GRAPHQL_URL=https://api.missionsyncai.com/graphql
NEXT_PUBLIC_WS_URL=wss://api.missionsyncai.com
FRONTEND_URL=https://missionsyncai.com

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration
OCR_MODEL=anthropic/claude-3-haiku
CLASSIFICATION_MODEL=anthropic/claude-3-haiku
EXTRACTION_MODEL=anthropic/claude-3-sonnet
ANALYSIS_MODEL=anthropic/claude-3-sonnet
SUMMARY_MODEL=openai/gpt-3.5-turbo

# Server Configuration
PORT=5000
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Email Configuration (Amazon SES)
EMAIL_FROM=noreply@missionsyncai.com
AWS_SES_REGION=us-east-1
SES_FROM_EMAIL=${EMAIL_FROM}

# Monitoring and Logging (CloudWatch)
CLOUDWATCH_LOG_GROUP=/aws/ecs/missionsync
CLOUDWATCH_LOG_STREAM=production
LOG_LEVEL=info
LOG_FORMAT=json

# ECS/Fargate Configuration
ECS_CLUSTER_NAME=missionsync-cluster
ECS_SERVICE_NAME=missionsync-service
ECS_TASK_DEFINITION=missionsync-task

# Load Balancer Configuration
ALB_DNS_NAME=your-alb-dns.elb.amazonaws.com
TARGET_GROUP_ARN=arn:aws:elasticloadbalancing:us-east-1:account-id:targetgroup/name/id
HEALTH_CHECK_PATH=/health

# ECR Configuration
ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com
ECR_REPOSITORY_FRONTEND=missionsync-frontend
ECR_REPOSITORY_BACKEND=missionsync-backend

# Security Configuration
ALLOWED_ORIGINS=https://missionsyncai.com,https://www.missionsyncai.com
SECURE_COOKIES=true
TRUST_PROXY=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=104857600
MAX_BATCH_SIZE=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=missionsync-backups-prod
BACKUP_SCHEDULE=0 2 * * *

# Deployment Configuration
DEPLOY_ENV=production
DEPLOY_REGION=us-east-1

# Domain and SSL
DOMAIN_NAME=missionsyncai.com
SSL_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account-id:certificate/certificate-id

# Database Connection Pool
DB_CONNECTION_LIMIT=20
DB_CONNECTION_IDLE_TIMEOUT=10000

# Performance Settings
NODE_OPTIONS=--max-old-space-size=4096
PM2_INSTANCES=max
CLUSTER_MODE=true

# Secrets Manager (Optional - for managing sensitive data)
AWS_SECRETS_MANAGER_SECRET_NAME=missionsync/production/secrets
USE_SECRETS_MANAGER=false

# VPC Configuration
VPC_ID=vpc-xxxxxxxxxxxxx
SUBNET_IDS=subnet-xxxxx,subnet-yyyyy,subnet-zzzzz
SECURITY_GROUP_ID=sg-xxxxxxxxxxxxx
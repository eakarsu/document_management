# Environment Configuration for Document Management System
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://dms_user:dms_password@localhost:5432/dms_metadata
MONGODB_URL=mongodb://dms_user:dms_password@localhost:27017/dms_documents
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=dms_user
MINIO_SECRET_KEY=dms_password
MINIO_SECURE=false

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# OpenRouter AI Services
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration
OCR_MODEL=anthropic/claude-3-haiku
CLASSIFICATION_MODEL=anthropic/claude-3-haiku
EXTRACTION_MODEL=anthropic/claude-3-sonnet
ANALYSIS_MODEL=anthropic/claude-3-sonnet
SUMMARY_MODEL=openai/gpt-3.5-turbo

# Server Configuration
PORT=4000
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# File Upload Limits
MAX_FILE_SIZE=104857600
MAX_BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=info

# Development vs Production
DEBUG=true

# RabbitMQ (if using background processing)
RABBITMQ_URL=amqp://dms_user:dms_password@localhost:5672

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourdomain.com

# Integration URLs (for your existing platforms)
LEGAL_AI_FORMS_URL=https://legalaiforms.com
NORSHIN_VISION_URL=https://norshin.com
CASHFLOW_APP_URL=https://cashflowapp.app
CONTRACTS_URL=https://contracts.orderlybite.com
SECURITY_URL=https://security.orderlybite.com

# Domain and Organization
DEFAULT_ORGANIZATION_DOMAIN=yourdomain.com
COMPANY_NAME=Your Company Name
COMPANY_LOCATION=Richmond, VA